apiVersion: sparkoperator.k8s.io/v1beta2
kind: SparkApplication
metadata:
  name: "pi-{{ .Replica }}"
  namespace: "spark-jobs"
  labels:
    spark-jobs: "true"
spec:
  type: Scala
  mode: cluster
  image: spark:3.5.5
  imagePullPolicy: IfNotPresent
  mainClass: org.apache.spark.examples.SparkPi
  mainApplicationFile: local:///opt/spark/examples/jars/spark-examples.jar
  sparkVersion: 3.5.5
  driver:
    cores: 1
    memory: 512m
    serviceAccount: kubeflow-spark-operator-spark
    labels:
      "pod-complete.stage.kwok.x-k8s.io/completed": "true"
      "spark-jobs": "true"
      "kube-burner-job": "{{ .JobName }}"
      "kube-burner-runid": "{{ .RunID }}"
      "kube-burner-uuid": "{{ .UUID }}"
      "kube-burner.io/job-iteration": "{{ .Iteration }}"
      "kube-burner.io/replica": "{{ .Replica }}"
    nodeSelector:
      type: "kwok"
    tolerations:
      - effect: "NoSchedule"
        key: "kwok.x-k8s.io/node"
        operator: "Exists"
  executor:
    instances: 1
